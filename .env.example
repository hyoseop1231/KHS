# Example environment variables for Multimodal RAG Chatbot
# Copy this to .env and customize as needed
# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=False

# File handling
UPLOAD_DIR=uploads
# Maximum file size in megabytes
MAX_FILE_SIZE=100
# Comma-separated extensions (e.g. .pdf,.docx)
ALLOWED_EXTENSIONS=.pdf

# Vector DB settings
CHROMA_DATA_PATH=vector_db_data
COLLECTION_NAME=pdf_documents_collection

# Text processing settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=150
EMBEDDING_MODEL=jhgan/ko-sroberta-multitask

# Ollama LLM settings
OLLAMA_API_URL=http://localhost:11434/api/generate
OLLAMA_DEFAULT_MODEL=llama2
OLLAMA_TIMEOUT=120

# OCR settings
# Optional: full path to Tesseract executable (if not in PATH)
TESSERACT_CMD=
OCR_LANGUAGES=kor+eng
OCR_DPI=300

# OCR Correction settings
OCR_CORRECTION_ENABLED=True
OCR_CORRECTION_USE_LLM=True

# Security settings
# Change in production!
SECRET_KEY=your-secret-key-change-in-production
# Comma-separated list of allowed CORS origins
CORS_ORIGINS=http://localhost:8000

# Logging settings
LOG_LEVEL=INFO
LOG_FILE=app.log